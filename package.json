{
  "name": "@percona/platform-core",
  "version": "1.0.2",
  "description": "Platform UI core components",
  "private": false,
  "keywords": [
    "percona",
    "ui",
    "components"
  ],
  "author": "Percona <info@percona.com>",
  "homepage": "https://github.com/percona-platform/core-ui/tree/main",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf dist",
    "start": "npm run clean && npm run dev",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:fix": "npm run lint --fix",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "react-scripts test --verbose",
    "test:ci": "CI=true react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "build": "NODE_ENV=production npm run lint && npm run clean && tsc -p tsconfig.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "react-popper": "^2.2.5",
    "react-scripts": "^4.0.3",
    "react-table": "^7.6.2",
    "typescript": "4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@emotion/css": "^11.1.3",
    "@grafana/data": "^8.3.5",
    "@grafana/eslint-config": "^2.5.1",
    "@grafana/ui": "^8.3.5",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/addon-storysource": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "26.0.15",
    "@types/node": "^16.11.7",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "@types/react-table": "^7.7.6",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "final-form": "^4.20.2",
    "husky": "^8.0.0",
    "jest-canvas-mock": "^2.3.0",
    "lint-staged": "^12.0.2",
    "react-final-form": "^6.5.3",
    "rimraf": "^3.0.2",
    "storybook-dark-mode": "^1.0.8"
  },
  "peerDependencies": {
    "@emotion/css": "^11.1.3",
    "@grafana/data": "8.3.5",
    "@grafana/ui": "8.3.5",
    "final-form": "^4.20.2",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-final-form": "^6.5.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --ext .js,.jsx,.tsx,.ts"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percona-platform/core-ui.git"
  },
  "bugs": {
    "url": "https://jira.percona.com/browse/SAAS"
  }
}
